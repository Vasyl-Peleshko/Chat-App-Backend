{
  "compilerOptions": {
    "target": "ES2016",                 // JavaScript версія
    "module": "CommonJS",               // CommonJS для сумісності з Node.js
    "rootDir": ".",                     // Корінь проекту
    "outDir": "./dist",                 // Папка для скомпільованих файлів
    "strict": true,                     // Увімкнути строгий режим TypeScript
    "esModuleInterop": true,            // Сумісність з ES6 модулями
    "moduleResolution": "node",         // Пошук модулів як у Node.js
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],               // Всі TypeScript файли у будь-якій папці
  "exclude": ["node_modules", "dist"]   // Винятки
}
